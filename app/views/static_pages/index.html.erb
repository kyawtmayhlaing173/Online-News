<div>  <%= link_to "Create New Post", new_post_path, class: 'btn' %></div>
<h1>Online News</h1>
<%= will_paginate @post%>
<table border="0">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @post.each do |posts| %>
  <tr>
    <td><%= gravatar_for posts %></td>
    <td><%= posts.title %></td>
    <td><%= posts.detail %></td>
    <td><%= posts.User.email %></td>
    <td><span class="timestamp">
      Posted <%= time_ago_in_words(posts.created_at) %> ago.
    </span></td>

  </tr>
<% end %>
</table>
<%= will_paginate @post%>
