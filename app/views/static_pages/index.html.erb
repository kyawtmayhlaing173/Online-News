<div>  <%= link_to "Create New Post", new_post_path, class: 'btn' %></div>
<h1>Online News</h1>
<%= will_paginate @post%>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Email</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @post.each do |posts| %>
  <tr>
    <td><%= gravatar_for posts %></td>
    <td><%= posts.title %></td>
    <td><%= posts.detail %></td>
    <td><%= posts.User_id %></td>

  </tr>
<% end %>
</table>
<%= will_paginate @post%>
